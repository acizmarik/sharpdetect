<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
	<TargetFramework>net7.0</TargetFramework>
	<ImplicitUsings>enable</ImplicitUsings>
	<AllowUnsafeBlocks>true</AllowUnsafeBlocks>
	<RootNamespace>SharpDetect.Profiler</RootNamespace>
	<PublishAot>true</PublishAot>
	<NativeLib>Shared</NativeLib>
	<SelfContained>true</SelfContained>
  </PropertyGroup>

  <PropertyGroup>
	<IlcDisableReflection>false</IlcDisableReflection>
	<IlcOptimizationPreference>Speed</IlcOptimizationPreference>
  </PropertyGroup>

  <ItemGroup>
	<PackageReference Include="Iced" Version="1.17.0" />
	<PackageReference Include="NetMQ" Version="4.0.1.10" />
  </ItemGroup>

  <ItemGroup>
	<ProjectReference Include="..\..\SharpDetect.ProtocolBuffers\SharpDetect.ProtocolBuffers.csproj" />
	<ProjectReference Include="..\NativeObjectsSourceGenerator\NativeObjectsSourceGenerator.csproj" OutputItemType="Analyzer" ReferenceOutputAssembly="false" />
  </ItemGroup>

  <ItemGroup>
	<Using Include="System.UInt32" Alias="DWORD" />
	<Using Include="System.Byte" Alias="COR_SIGNATURE" />
	<Using Include="System.IntPtr" Alias="HCORENUM" />
  </ItemGroup>

  <ItemGroup>
    <Folder Include="Hooks\Asm\" />
    <Folder Include="Hooks\Platform\Linux\" />
  </ItemGroup>

</Project>
